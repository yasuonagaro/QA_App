<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QA_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.QA_App.NoActionBar">
        <!-- Window Action Bar. -->
        <item name="windowActionBar">false</item>
        <!-- Window NoTitle. -->
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Style Name. -->
    <style name="Theme.QA_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- Style Name. -->
    <style name="Theme.QA_App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Customize your theme here. -->
</resources>